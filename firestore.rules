rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public status snapshot collection used by the hosted client app.
    match /status_public_projects/{projectId} {
      allow read: if true;
      allow write: if false;
    }

    // Keep all private collections/functions-only writes locked down.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
